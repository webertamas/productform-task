<Window x:Class="WpfApp4.ProductFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp4"
        mc:Ignorable="d"
        Title="ProductFormWindow" Height="300" Width="267.227">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="39" Margin="20,41,0,0" TextWrapping="Wrap" Text="{Binding Product.Name}" VerticalAlignment="Top" Width="221"/>
        <TextBox HorizontalAlignment="Left" Height="39" Margin="20,85,0,0" TextWrapping="Wrap" Text="{Binding Product.Price}" VerticalAlignment="Top" Width="221"/>
        <TextBox HorizontalAlignment="Left" Height="39" Margin="20,129,0,0" TextWrapping="Wrap" Text="{Binding Product.Quantity}" VerticalAlignment="Top" Width="221"/>
        <Button Content="Mentés" HorizontalAlignment="Left" Margin="94,201,0,0" VerticalAlignment="Top" Width="75" Click="SaveClick"/>

    </Grid>
</Window>
